<% layout('layouts/boilerplate.ejs') %>
    <div class="col-8 offset-2">

        <body>
            <br>
            <h3>Create a New Listing</h3>

            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <!-- Title -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" required type="text"
                        class="form-control" />
                    <div class="valid-feedback">
                        Title Looks good!
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter description"
                        class="form-control"></textarea>
                    <div class="invalid-feedback">
                        Please enter short decription
                    </div>
                </div>

                <!-- Image -->
                <div class="mb-3">
                    <label for="image" class="form-label ">Upload Listing Image</label>
                    <input name="listing[image]" type="file" class="form-control" multiple />
                </div>

                <!-- Price -->
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price </label>
                        <input name="listing[price]" placeholder="1200" class="form-control" type="number" required>
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>

                    <!-- Country -->
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="India" class="form-control" type="text" required>
                        <div class="invalid-feedback">
                            Country should be valid
                        </div>
                    </div>
                </div>

                <!-- Location -->
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" required
                        class="form-control" />
                    <div class="invalid-feedback">
                        Location should be valid
                    </div>
                </div>

                <!-- Category -->
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" id="category" required class="form-control">
                        <option value="" disabled selected>Choose a category</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Camping">Camping</option>
                        <option value="Beachfront">Beachfront</option>
                        <option value="Boats">Boats</option>
                    </select>
                </div>

                <button class="btn btn-dark add-btn mt-3">Add</button>
                <br><br>
            </form>

        </body>
    </div>