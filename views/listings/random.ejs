<% layout('layouts/boilerplate.ejs') %>

<style>
    .text-custom-primary {
        color: #fe424d !important;
    }
    .btn-outline-custom {
        color: #fe424d;
        border-color: #fe424d;
    }
    .btn-outline-custom:hover {
        color: white;
        background-color: #fe424d;
        border-color: #fe424d;
    }
    .lost-icon {
        font-size: 120px;
        color: #fe424d;
    }
    .error-code {
        font-size: 150px;
        font-weight: bold;
        color: #fe424d;
        opacity: 0.2;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: -1;
    }
    .container-404 {
        min-height: 70vh;
        position: relative;
    }
    .compass-rotate {
        animation: spin 8s linear infinite;
    }
    @keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 p-4 container-404 text-center">
                <div class="error-code" aria-hidden="true">404</div>
                
                <div class="mb-4">
                    <i class="bi bi-compass lost-icon compass-rotate"></i>
                </div>

                <h1 class="display-5 mb-4">Oops! You've Wandered Too Far</h1>
                
                <p class="text-muted mb-4">Looks like you've ventured off the beaten path! The page you're looking for seems to have gone on its own adventure.</p>
                
                <div class="d-flex justify-content-center gap-4 mb-4">
                    <div class="text-center">
                        <i class="bi bi-map text-custom-primary fs-1"></i>
                        <p class="small text-muted mt-2">Lost in<br>Translation</p>
                    </div>
                    <div class="text-center">
                        <i class="bi bi-signpost-2 text-custom-primary fs-1"></i>
                        <p class="small text-muted mt-2">Wrong<br>Turn</p>
                    </div>
                    <div class="text-center">
                        <i class="bi bi-house-heart text-custom-primary fs-1"></i>
                        <p class="small text-muted mt-2">Home is<br>This Way</p>
                    </div>
                </div>

                <a href="/listings" class="btn btn-outline-custom px-4 py-2">
                    <i class="bi bi-house-door me-2"></i>Return Home
                </a>
            </div>
        </div>
    </div>
</div>
